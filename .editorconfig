# This file is for unifying the coding style for different editors and IDEs
# editorconfig.org

root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = tab

# coffee files
[coffee/*.coffee]
indent_style = tab
indent_size = 4

# css files
[css/*.css]
indent_style = tab
indent_size = 2

# js files
[js/*.js]
indent_style = tab
indent_size = 4

# less files
[less/*.less]
indent_style = tab
indent_size = 2

# myth files
[myth/*.css]
indent_style = tab
indent_size = 2

# sass files
[sass/*.scss]
indent_style = tab
indent_size = 2

# stylus files
[stylus/*.styl]
indent_style = tab
indent_size = 2